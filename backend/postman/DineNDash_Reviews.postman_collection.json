{
  "info": {
    "name": "DineNDash - Reviews",
    "description": "Review management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "customer_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Public - Reviews",
      "item": [
        {
          "name": "Get Reviews by Restaurant",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reviews/restaurant/1",
              "host": ["{{base_url}}"],
              "path": ["reviews", "restaurant", "1"]
            }
          }
        },
        {
          "name": "Get Reviews by Restaurant (Filter by Rating)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reviews/restaurant/1?rating=5",
              "host": ["{{base_url}}"],
              "path": ["reviews", "restaurant", "1"],
              "query": [
                {
                  "key": "rating",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Customer - Reviews",
      "item": [
        {
          "name": "Submit Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"booking_id\": 1,\n    \"rating\": 5,\n    \"comment\": \"Absolutely amazing experience! The food was delicious, service was impeccable, and the ambiance was perfect. Highly recommend!\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/reviews",
              "host": ["{{base_url}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Get My Reviews",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reviews/my-reviews",
              "host": ["{{base_url}}"],
              "path": ["reviews", "my-reviews"]
            }
          }
        },
        {
          "name": "Check Can Review Booking",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reviews/can-review/1",
              "host": ["{{base_url}}"],
              "path": ["reviews", "can-review", "1"]
            }
          }
        },
        {
          "name": "Update Review",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"rating\": 4,\n    \"comment\": \"Updated review: Great food and service. Minor improvements needed in seating comfort.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/reviews/1",
              "host": ["{{base_url}}"],
              "path": ["reviews", "1"]
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reviews/1",
              "host": ["{{base_url}}"],
              "path": ["reviews", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Reviews",
      "item": [
        {
          "name": "Get All Reviews",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reviews",
              "host": ["{{base_url}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Get Reviews by Restaurant (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reviews?restaurant_id=1",
              "host": ["{{base_url}}"],
              "path": ["reviews"],
              "query": [
                {
                  "key": "restaurant_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reviews by Rating (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reviews?rating=5",
              "host": ["{{base_url}}"],
              "path": ["reviews"],
              "query": [
                {
                  "key": "rating",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}